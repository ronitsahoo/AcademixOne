{
  "name": "academixone",
  "version": "1.0.0",
  "description": "AcademixOne Academic Portal - Full Stack Application",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start": "npm run start:backend",
    "test:db": "cd backend && npm run test-db",
    "seed": "cd backend && npm run seed",
    "lint:backend": "cd backend && npm run lint || echo 'No lint script in backend'",
    "lint:frontend": "cd frontend && npm run lint",
    "lint": "npm run lint:frontend",
    "health-check": "cd backend && node -e \"console.log('Health check passed')\"",
    "postinstall": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "academic",
    "portal",
    "education",
    "fullstack",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "AcademixOne Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/academixone.git"
  }
}